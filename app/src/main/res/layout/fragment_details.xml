                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    />-->

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="155sp"
                    android:layout_height="45sp"
                    android:orientation="horizontal"
                    android:onClick="@{viewModel::onClickBuyNow}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/app_color"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wallet"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:text="@string/buy_now"
                        android:gravity="center"
                        android:background="@color/app_color"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--for NFT Image Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_nft_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:onClick="@{viewModel::onNftImageClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_buy"
                >
                <TextView
                    android:id="@+id/tv_nft_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/nft_image"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="221sp"
                    android:visibility="@{viewModel.isMFTImage ? View.VISIBLE : View.GONE, default = gone}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_nft_text"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scaleType="centerCrop"
                    app:setImageUrl="@{viewModel.mMFTImage}"
                    />



                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isMFTImage ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_nft_text"
                    app:layout_constraintBottom_toBottomOf="@id/tv_nft_text"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--for About Collection Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_about_collection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:onClick="@{viewModel::onAboutCollectionClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_nft_image"
                >
                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/about_collections"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <TextView
                    android:id="@+id/tv_answer"
                    android:visibility="@{viewModel.isAboutCollection ? View.VISIBLE : View.GONE, default = gone}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_color2"
                    android:textSize="12sp"
                    android:text="@{viewModel.mAboutCollection}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title"
                    />
                <ImageView
                    android:id="@+id/arrow_up_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isAboutCollection ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_title"
                    app:layout_constraintBottom_toBottomOf="@id/tv_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>



            <!--for Properties Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_properties"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:onClick="@{viewModel::onPropertiesClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_about_collection"
                >
                <TextView
                    android:id="@+id/tv_properties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/properties"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isProperties ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_properties"
                    app:layout_constraintBottom_toBottomOf="@id/tv_properties"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/_10sdp"/>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_properties"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:visibility="@{viewModel.isProperties ? View.VISIBLE : View.GONE, default = gone}"
                    android:layout_marginTop="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_properties"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/layout_properties_item" />
                <!--<TextView
                    android:visibility="@{viewModel.isProperties ? View.VISIBLE : View.GONE, default = gone}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:fontFamily="@font/poppins_regular"
                    android:textColor="@color/text_color2"
                    android:textSize="12sp"
                    android:text="@{viewModel.mAboutCollection}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_properties"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isProperties ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_properties"
                    app:layout_constraintBottom_toBottomOf="@id/tv_properties"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/_10sdp"/>
                -->

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--for Price History Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_pricee_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:visibility="@{viewModel.isTrue ? View.VISIBLE : View.GONE}"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:onClick="@{viewModel::onPriceHistoryClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_properties"
                >
                <TextView
                    android:id="@+id/tv_price_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/price_history"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    style="@style/matchWrap"
                    android:orientation="vertical"
                    android:visibility="@{viewModel.isPriceHistory ? View.VISIBLE : View.GONE, default = gone}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_price_history"
                    >
<!--
                    <TextView
                        android:layout_width="91sp"
                        android:layout_height="33sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:fontFamily="@font/poppins_regular"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:paddingRight="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:drawablePadding="@dimen/_3sdp"
                        android:text="@string/all_time"
                        android:background="@color/app_color"
                        android:drawableRight="@drawable/ic_down"
                        android:drawableTint="@color/white"
                        />-->
                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/chart"
                        android:layout_width="match_parent"
                        android:layout_height="180sp"
                        android:layout_above="@+id/seekBar1" />

                </androidx.appcompat.widget.LinearLayoutCompat>


                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isPriceHistory ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_price_history"
                    app:layout_constraintBottom_toBottomOf="@id/tv_price_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginRight="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <!--for Bid History Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_bid_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:visibility="@{viewModel.isTrue ? View.VISIBLE : View.GONE}"
                android:onClick="@{viewModel::onBidHistoryClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_pricee_history"
                >
                <TextView
                    android:id="@+id/tv_bid_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/bid_history"
                    android:textColor="@color/black"
                    android:textSize="@dimen/sp_14"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_bid_history"
                    android:visibility="@{viewModel.isBidHistory ? View.VISIBLE : View.GONE, default = gone}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_bid_history"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_bid_history_item" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@{viewModel.isBidHistory ? @drawable/ic_arrow_up : @drawable/ic_arrow_down, default = @drawable/ic_arrow_down}"
                    app:layout_constraintTop_toTopOf="@id/tv_bid_history"
                    app:layout_constraintBottom_toBottomOf="@id/tv_bid_history"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_10sdp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>




            <!--for Details Only-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50sp"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/hud_cover_radius"
                android:padding="10sp"
                android:onClick="@{viewModel::onDetailsClick}"
                app:layout_constraintTop_toBottomOf="@+id/layout_bid_history"
                >
                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minHeight="45sp"
                    android:gravity="start|center"
                    android:layout_gravity="center"
