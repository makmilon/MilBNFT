<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="viewModel"
            type="com.mobiria.bnft.ui.fragment.product_details.DetailsViewModel" />
    </data>

    <!--  -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:paddingBottom="@dimen/_60sdp"
        android:scrollbars="none"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            style="@style/matchMatch"
            android:background="@color/white"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/layout_image"
                android:layout_width="match_parent"
                android:layout_height="300sp"
                android:background="@color/app_color"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_imageView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    app:setImageUrl="@{viewModel.mProductImage}"
                    />

            </androidx.appcompat.widget.LinearLayoutCompat>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_resale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="10sp"
                android:visibility="@{viewModel.isTrue ? View.VISIBLE : View.GONE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_image"
                android:background="@drawable/hud_cover_radius"
                >
                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Highest Bid"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    tools:text="0.01 ETH"
                    android:text="@{viewModel.mMinBidPrice}"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/light_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView01"
                    />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="155sp"
                    android:layout_height="45sp"
                    android:orientation="horizontal"
                    android:onClick="@{viewModel::onClickBidNow}"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="@{viewModel.isAuction ? View.VISIBLE : View.GONE}"
                    android:background="@color/app_color"
                    android:gravity="center"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_wallet"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="45sp"
                        android:text="@string/place_bid"
                        android:gravity="center"
                        android:background="@color/app_color"
                        android:fontFamily="@font/poppins_semibold"
                        android:textSize="@dimen/sp_15"
                        android:textColor="@color/white"
                        android:layout_marginStart="@dimen/_5sdp"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/app_color_10"
                    app:layout_constraintTop_toBottomOf="@+id/textView02"
                    />
                <TextView
                    android:id="@+id/tv_sale_end"
                    android:layout_width="0sp"
                    android:layout_height="@dimen/_30sdp"
                    tools:text="Sale ends June 4, 2022 at 11:29am GMT+5:30 "
                    android:text="@{viewModel.mProductDetails.product.description}"
                    android:fontFamily="@font/poppins_regular"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view1"
                    />
                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@color/app_color_10"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sale_end"
                    />

                    <TextView
                        android:id="@+id/tv_by"
                        android:layout_width="wrap_content"
                        android:layout_height="30sp"
                        android:text="@string/by"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="@dimen/sp_10"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view2"
                        />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_profile"
                    android:layout_width="35sp"
                    android:layout_height="35sp"
                    app:layout_constraintStart_toEndOf="@+id/tv_by"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    android:src="@drawable/dummy_profile"
                    android:layout_marginStart="@dimen/_5sdp"
                    app:civ_border_width="1sp"
                    app:civ_border_color="@color/border_color"
                    app:setImageUrl="@{viewModel.mSellerImage}"
                    />


                <TextView
                    android:id="@+id/tv_OthersideMeta"
                    android:layout_width="wrap_content"
                    android:layout_height="30sp"
                    tools:text="OthersideMeta"
                    android:text="@{viewModel.mSellerName}"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="@dimen/sp_11"
                    android:gravity="center_vertical"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toEndOf="@+id/iv_profile"
                    app:layout_constraintTop_toBottomOf="@+id/view2"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>



            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_buy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:padding="10sp"
                android:visibility="@{viewModel.isTrue ? View.GONE : View.VISIBLE}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_resale"
                android:background="@drawable/hud_cover_radius"
                >
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Price"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="@dimen/sp_10"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />
                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    tools:text="0.01 ETH"
                    android:text="@{viewModel.mProductDetails.product.price}"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="@dimen/sp_22"
                    android:textColor="@color/light_black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView1"
                    />


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0sp"
                    android:layout_height="wrap_content"
                    android:text="Select Size"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/light_black"
                    android:layout_marginTop="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2"
                    />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="horizontal"
                    android:layout_marginTop="5sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="6"
                    tools:listitem="@layout/layout_size_item" />

             <!--   <TextView
                    android:id="@+id/textView3"
                    android:layout_width="47sp"
                    android:layout_height="45sp"
